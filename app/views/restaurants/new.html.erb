<h2>New Restaurant</h2>

  <%= form_for(@restaurant) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :address %>
  <%= f.text_field :address %>
  <%= f.label :category %>
  <%= f.select :category, ["chinese", "italian", "japanese", "french", "belgian"].map { |value| [ value, value ] } %>
  <%= f.text_field :category %>
  <%= f.label :phone_number %>
  <%= f.number_field :phone_number %>
  <%= f.submit %>


  <p><%= link_to "Back to Restaurants", retaurants_path %>
<% end %>
